<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', { css:'products_style', js:'main' } ) %> 
<body>
    <div class="container">

        <!-- header -->
	    <%- include('../partials/header') %>
        <!-- /header -->    	    
        
        <article class="article__products__title">
            <h2>Todos los productos</h2>
        </article>  
          <!-- products -->
        <section class="section__products">                   
            <% products.forEach(producto => { %>
                <article class="article__products__detail">
                    <a href="/products/<%= producto.id %> ">
                        <article class="product__box__image">
                            <img src="/images/<%= producto.image %> " class="image__product" alt="imagen de producto">
                        </article>
                        <article class="product__box__data">
                            <p>$<%= producto.price %></p>
                            <p><%= producto.discount %> % OFF</p>
                            <p><%= producto.name %> </p>
                            <i class="fas fa-truck"></i>
                        </article>
                    </a>
                </article>
            <% }) %>
        </section>

        <!-- footer -->
	    <%- include('../partials/footer') %>
	    <!-- /footer -->
    </div>
</body>
</html>